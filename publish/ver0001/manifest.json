{
    "manifest_version": 3,
    "name": "Re Transcript",
    "version": "0.0.0.1",

    "action": {
        "default_title": "re-transcript",
        "default_popup": "popup.html",
        "default_icon": "re-transcript-128.png"
    },
    "description": "Udemyのトランスクリプト上の英語字幕を再構成して、正確な翻訳出力を助けます。好みの翻訳拡張機能とともに使用してください",
    "icons": {
        "16": "re-transcript-16.png",
        "48": "re-transcript-48.png",
        "128": "re-transcript-48.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["search", "tabs", "storage", "activeTab", "scripting"],
    "content_security_policy": {},
    "content_scripts": []
}
