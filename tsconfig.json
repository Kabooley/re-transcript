{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": ["dom", "es6"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
